<%- include('../partials/head.ejs')%>

    <body>
        <%- include('../partials/navbar.ejs')%>
            <main>
                <section class="min-h-screen bg-gray-100 p-6">
                    <div class="max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md">

                        <h2 class="text-2xl font-bold text-gray-800 mb-6">
                            <%= editing ? 'Edit Your Home' : 'Register your Home' %>
                        </h2>

                        <form class="space-y-6" method="post" action="/<%= editing ? 'edit-home' : 'register-home' %>">

                            <!-- Owner Name -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Owner Name</label>
                                <input type="text" placeholder="Enter Owner Name" name="ownerName"
                                    value="<%= editing ? homes.ownerName : '' %>"
                                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" />
                            </div>

                            <!-- Home Name -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">House Name</label>
                                <input type="text" placeholder="Cozy Beach House" name="houseName"
                                    value="<%= editing ? homes.houseName : '' %>"
                                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" />
                            </div>

                            <!-- Location -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Location</label>
                                <input type="text" placeholder="Goa, India" name="location"
                                    value="<%= editing ? homes.location : ''%>"
                                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" />
                            </div>

                            <!-- Price Per Night -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Price Per Night
                                    (INR)</label>
                                <input type="number" placeholder="3500" name="price"
                                    value="<%= editing ? homes.price : '' %>"
                                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" />
                            </div>

                            <!-- Guests -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Max Guests</label>
                                <input type="number" placeholder="4" name="guests"
                                    value="<%= editing ? homes.guests : '' %>"
                                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" />
                            </div>

                            <!-- Image URL -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Image URL</label>
                                <input type="url" placeholder="https://example.com/home.jpg" name="imageURL"
                                    value="<%= editing ? homes.imageURL : '' %>"
                                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500" />
                            </div>

                            <!-- Description -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1"
                                    for="description">Description</label>
                                <input name="description" value="<%= editing ? homes.description : '' %>"
                                    placeholder="A peaceful home near the beach with all modern amenities."
                                    class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500">
                            </div>

                            <!-- Submit Button -->
                            <div class="pt-4">
                                <button type="submit"
                                    class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold px-6 py-3 rounded-md">
                                    <%= editing ? 'Update Home' : 'Register Home' %>
                                </button>
                            </div>
                        </form>



                    </div>
                </section>
            </main>


    </body>

    </html>