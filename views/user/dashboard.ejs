<%- include('../partials/head.ejs')%>

    <body>
        <%- include('../partials/navbar.ejs')%>

            <main>
                <section class="min-h-screen bg-gray-100 p-6">
                    <div class="max-w-7xl mx-auto">
                        <h2 class="text-3xl font-bold text-gray-800 mb-6">Explore Your Homes</h2>

                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

                            <% registeredHomes.forEach(home=>{ %>

                                <!-- Home Card -->
                                <div
                                    class="bg-white rounded-xl overflow-hidden shadow-md relative hover:shadow-lg transition">
                                    <!-- Favorite Button -->
                                    <button
                                        class="absolute top-3 right-3 bg-white p-2 rounded-full shadow hover:bg-red-100">
                                        <svg class="w-5 h-5 text-red-500 fill-current" viewBox="0 0 20 20">
                                            <path
                                                d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 015.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" />
                                        </svg>
                                    </button>

                                    <!-- Image -->
                                    <img src="<%= home.imageURL%>" alt="Home" class="w-full h-48 object-cover" />

                                    <!-- Content -->
                                    <div class="p-4">
                                        <h3 class="text-xl font-semibold text-gray-800">
                                            <%= home.houseName%>
                                        </h3>
                                        <p class="text-gray-500 text-sm mb-2">
                                            <%= home.location%>
                                        </p>
                                        <p class="text-gray-700 mb-2">₹<%= home.price%>/night • <%=home.guests%> Guests
                                        </p>

                                        <button
                                            class="cursor-pointer  w-full mt-2 bg-red-500 hover:bg-red-600 text-white font-semibold py-2 rounded-md">
                                            Book Now
                                        </button>
                                        <a href="/dashboard/<%= home._id %>" class="text-red-500">View Details</a>
                                    </div>
                                </div>

                                <% }); %>


                        </div>
                    </div>
                </section>


            </main>


    </body>

    </html>